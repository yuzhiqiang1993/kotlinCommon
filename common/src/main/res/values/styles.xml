<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="titleTextColor">@color/white</item>
        <item name="colorControlHighlight">@color/wave_color</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/bg_gray</item>


    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--tablayout样式-->
    <style name="tabLayout">
        <item name="android:background">@color/white</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabGravity">fill</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>

    </style>

    <!--HorizontalItemView 自定义属性-->
    <declare-styleable name="HorizontalItemView">

        <attr name="icon" format="reference"></attr>
        <attr name="showIcon" format="boolean"></attr>
        <attr name="title" format="string"></attr>

    </declare-styleable>

</resources>
