<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="基础弹窗"
        app:icon="@drawable/ic_pwd"
        app:iconGravity="textStart" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_only_positive_callback"
        style="@style/OutlineButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="只有确定按钮和回调"
        app:icon="@drawable/ic_arrow_down"
        app:iconGravity="textStart" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_positive_callback"
        style="@style/TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="双选项但只有确定按钮有回调"
        app:icon="@drawable/ic_map"
        app:iconGravity="textStart" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_callback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="双选项双回调" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_single_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="单选" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_input"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="输入" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_loading"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载框" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_progress"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="进度框" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_select_year"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择年份" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_select_date"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择年月日" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_select_time"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择时分" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_bottom_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="底部弹窗" />


</androidx.appcompat.widget.LinearLayoutCompat>