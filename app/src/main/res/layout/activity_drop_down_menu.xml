<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.DropDownMenuActivity">

    <include
        android:id="@+id/included_toolbar"
        layout="@layout/toolbar" />


    <com.yzq.widget.drop_down_menu.DropDownMenu
        android:id="@+id/dropdown_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:maskColor="@color/black_alpha_48"
        app:menuBackgroundColor="@color/white"
        app:menuMenuHeightPercent="0.6"
        app:menuSelectedIcon="@drawable/ic_arrow_up"
        app:menuTextSize="@dimen/sp_14"
        app:menuUnselectedIcon="@drawable/ic_arrow_down"
        app:textSelectedColor="@color/color_primary"
        app:textUnselectedColor="@color/black" />


</androidx.appcompat.widget.LinearLayoutCompat>