<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--HorizontalEditView 自定义属性-->
    <declare-styleable name="HorizontalEditView">

        <attr name="horz_edit_icon" format="reference" />
        <attr name="horz_edit_icon_tint" format="color" />
        <attr name="horz_edit_title" format="string" />
        <attr name="horz_edit_content" format="string" />
        <attr name="horz_edit_endIcon" format="reference" />
        <attr name="horz_edit_end_icon_tint" format="color" />
        <attr name="horz_edit_editEnable" format="boolean" />
        <attr name="horz_edit_hint" format="string" />
        <attr name="horz_edit_inputType" format="enum">
            <enum name="phone" value="0" />
            <enum name="number" value="1" />
            <enum name="textPassword" value="2" />
        </attr>

    </declare-styleable>

    <!--HorizontalTextView 自定义属性-->
    <declare-styleable name="HorizontalTextView">

        <attr name="horz_tv_icon" format="reference" />
        <attr name="horz_tv_icon_tint" format="color" />
        <attr name="horz_tv_title" format="string" />
        <attr name="horz_tv_content" format="string" />
        <attr name="horz_tv_endIcon" format="reference" />
        <attr name="horz_tv_endIcon_tint" format="color" />
        <attr name="horz_tv_content_left" format="boolean" />
        <attr name="horz_tv_hint" format="string" />
    </declare-styleable>


    <!--StateView 自定义属性-->
    <declare-styleable name="StateView">

        <attr name="no_data_img_res" format="reference" />
        <attr name="no_net_img_res" format="reference" />
        <attr name="error_img_res" format="reference" />


    </declare-styleable>


    <declare-styleable name="DropDownMenu">

        <attr name="textSelectedColor" format="color" />
        <attr name="textUnselectedColor" format="color" />
        <attr name="menuBackgroundColor" format="color" />
        <attr name="maskColor" format="color" />
        <attr name="menuTextSize" format="dimension" />
        <attr name="menuSelectedIcon" format="reference" />
        <attr name="menuUnselectedIcon" format="reference" />
        <attr name="menuMenuHeightPercent" format="float" />
    </declare-styleable>


    <declare-styleable name="SwipeMenuLayout">
        <attr name="swipeEnable" format="boolean" />
        <attr name="ios" format="boolean" />
        <attr name="leftSwipe" format="boolean" />
    </declare-styleable>

</resources>